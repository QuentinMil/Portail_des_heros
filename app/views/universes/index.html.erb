<div class="titre">
  <h1>Les Univers</h1>
  <p>Choisis ici l'univers qui te plait</p>
</div>

<div class="cards_univers">
  <% @universes.each_with_index do |universe, index| %>
    <div class="cards_univer <%= index.even? ? 'left-image' : 'right-image' %>">
      <div class="text">
        <h2><%= universe.name %></h2>
        <p><%= universe.description %></p>
        <%= link_to universe_path(universe), class: "button-#{universe.name.downcase.tr(' ', '-')}" do %>
          DÃ©couvrir
        <% end %>
      </div>
      <div class="image">
        <%= image_tag universe.photo, alt: "image #{universe.name}" %>
      </div>
    </div>
  <% end %>
</div>
